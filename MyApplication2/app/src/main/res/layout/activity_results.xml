<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ResultsActivity">

    <TextView
        android:id="@+id/textViewResultsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voting Results"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/textViewCandidate1Votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Candidate 1 Votes: 0"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textViewCandidate2Votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Candidate 2 Votes: 0"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Vote"
        android:layout_marginTop="32dp"/>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>